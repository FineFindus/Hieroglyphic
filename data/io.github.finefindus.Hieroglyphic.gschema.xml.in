<?xml version="1.0" encoding="utf-8"?>
<schemalist>
    <schema path="/io.github.finefindus.Hieroglyphic/" id="@app-id@" gettext-domain="@gettext-package@">
        <key name="show-contribution-nudge" type="b">
            <default>true</default>
            <!-- Translators: nudge means here a gentle prompt, i.e. the colored dot on the button -->
            <summary>Whether to show a small nudge towards the contribution dialog</summary>
        </key>
        <key name="contribute-data" type="b">
            <default>false</default>
            <summary>Whether to contribute recognized strokes</summary>
        </key>

        <key name="markup-language-mode" type="s">
            <choices>
                <choice value='latex'/>
                <choice value='typst'/>
            </choices>
            <default>"latex"</default>
            <summary>Markup language to suggest symbols for</summary>
        </key>
    </schema>
</schemalist>

