{
    "id": "fyi.zoey.TeXMatch",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm16"
    ],
    "command": "tex-match",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--env=RUST_LOG=eyedropper=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm16/bin",
        "build-args": [
            "--share=network"
        ],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ],
        "env": {
            "CARGO_REGISTRIES_CRATES_IO_PROTOCOL": "sparse",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER": "clang",
            "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold"
        }
    },
    "modules": [
        {
            "name": "tex-match",
            "buildsystem": "simple",
            "build-commands": [
                "cargo build --manifest-path TeX-Match-Linux/Cargo.toml",
                "install -Dm755 ./TeX-Match-Linux/target/release/tex-match -t /app/bin/",
                "install -Dm644 ./TeX-Match-Linux/data/${FLATPAK_ID}.metainfo.xml -t /app/share/metainfo/",
                "install -Dm644 ./TeX-Match-Linux/data/${FLATPAK_ID}.desktop -t /app/share/applications/",
                "install -Dm644 ./TeX-Match-Linux/data/${FLATPAK_ID}.svg -t /app/share/icons/hicolor/scalable/apps/",
                "install -Dm644 ./TeX-Match-Linux/data/${FLATPAK_ID}-symbolic.svg -t /app/share/icons/hicolor/symbolic/apps/"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                },
                "generated-sources.json"
            ]
        }
    ]
}
